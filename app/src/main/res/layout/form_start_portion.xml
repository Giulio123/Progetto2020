<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/repeated_every"
            android:textSize="12dp"/>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <EditText
                android:id="@+id/number_repetition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/rounded_corner_input"
                android:ems="2"
                android:inputType="numberDecimal"
                android:maxLength="2"
                android:text="@string/number_occurrences"
                android:textAlignment="center"
                android:textSize="16sp" />
            <LinearLayout
                android:background="@drawable/rounded_corner_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                android:id="@+id/period_layout">
                <Spinner
                    android:backgroundTint="@color/black_text"

                    android:id="@+id/period_spinner"
                    android:spinnerMode="dropdown"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownWidth="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"/>
    </LinearLayout>
</LinearLayout>